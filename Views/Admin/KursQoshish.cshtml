@model talim_platforma.Models.Kurs

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Yangi kurs";
}

<div class="mb-3">
    <h2 class="mb-1">Yangi kurs</h2>
    <p class="text-muted small mb-0">Kurs nomi, tavsifi va narxini kiriting</p>
    </div>
    <form asp-action="KursQoshish" method="post" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Kurs nomi</label>
            <input asp-for="Nomi" class="form-control" />
            <span asp-validation-for="Nomi" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Tavsif</label>
            <textarea asp-for="Tavsif" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Tavsif" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Darajasi</label>
            <input asp-for="Darajasi" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Narxi (soâ€˜m)</label>
            <input asp-for="Narxi" type="number" class="form-control" />
            <span asp-validation-for="Narxi" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Saqlash
            </button>
            <a asp-action="Kurslar" class="btn btn-outline-secondary">Orqaga</a>
        </div>
    </form>

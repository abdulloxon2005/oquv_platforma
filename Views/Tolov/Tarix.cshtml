@model List<talim_platforma.Models.Tolov>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "To‚Äòlov tarixi";
}

<h2 class="mb-4">@Model.FirstOrDefault()?.Talaba?.Ism @Model.FirstOrDefault()?.Talaba?.Familiya - To‚Äòlov tarixi</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="table-responsive shadow-sm">
    <table class="table align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Sana</th>
                <th>Miqdor (so‚Äòm)</th>
                <th>To‚Äòlov usuli</th>
                <th>Amallar</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int i = 1;
                foreach (var t in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@t.Sana.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@t.Miqdor.ToString("N0")</td>
                        <td><span class="badge bg-secondary">@t.TolovUsuli</span></td>
                        <td>
                            <button type="button" 
                                    class="btn btn-sm btn-outline-danger ochirish-btn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#ochirishModal"
                                    data-id="@t.Id"
                                    data-sana="@t.Sana.ToString("dd.MM.yyyy HH:mm")"
                                    data-miqdor="@t.Miqdor.ToString("N0")"
                                    data-usul="@t.TolovUsuli">
                                üóëÔ∏è O‚Äòchirish
                            </button>
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-3">
                        Bu talabaga oid to‚Äòlovlar topilmadi
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- üîΩ O‚Äòchirish uchun modal oynasi -->
<div class="modal fade" id="ochirishModal" tabindex="-1" aria-labelledby="ochirishModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content border-danger">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="ochirishModalLabel">To‚Äòlovni o‚Äòchirish</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Yopish"></button>
      </div>
      <div class="modal-body">
        <p>Haqiqatan ham ushbu to‚Äòlovni o‚Äòchirmoqchimisiz?</p>
        <ul class="list-unstyled">
            <li><strong>Sana:</strong> <span id="modalSana"></span></li>
            <li><strong>Miqdor:</strong> <span id="modalMiqdor"></span> so‚Äòm</li>
            <li><strong>To‚Äòlov usuli:</strong> <span id="modalUsul"></span></li>
        </ul>
        <div class="alert alert-warning mt-3">
            <i class="bi bi-exclamation-triangle-fill"></i>
            Bu amal qaytarilmaydi! To‚Äòlov ma‚Äôlumotlari butunlay o‚Äòchiriladi.
        </div>
      </div>
      <div class="modal-footer">
        <form asp-action="Ochir" method="post">
          @Html.AntiForgeryToken()
          <input type="hidden" id="modalTolovId" name="id" />
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bekor qilish</button>
          <button type="submit" class="btn btn-danger">O‚Äòchirish</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ochirishBtns = document.querySelectorAll(".ochirish-btn");
            ochirishBtns.forEach(btn => {
                btn.addEventListener("click", function () {
                    const id = this.dataset.id;
                    const sana = this.dataset.sana;
                    const miqdor = this.dataset.miqdor;
                    const usul = this.dataset.usul;

                    document.getElementById("modalTolovId").value = id;
                    document.getElementById("modalSana").innerText = sana;
                    document.getElementById("modalMiqdor").innerText = miqdor;
                    document.getElementById("modalUsul").innerText = usul;
                });
            });
        });
    </script>
}

@model IEnumerable<talim_platforma.Models.Tolov>

<div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Bugungi kirim</h4>
        <a class="btn btn-sm btn-outline-danger" href="/Hisobot/YuklabOlish?turi=kunlik">PDF yuklab olish</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Talaba</th>
                    <th>Miqdori</th>
                    <th>Sana</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Talaba?.Ism</td>
                        <td>@item.Miqdor.ToString("N0") so‘m</td>
                        <td>@item.Sana.ToString("dd.MM.yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end fw-semibold">
        Jami: @ViewBag.Jami so‘m
    </div>
</div>

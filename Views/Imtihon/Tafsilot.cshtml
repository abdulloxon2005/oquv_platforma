@model talim_platforma.Models.Imtihon
@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    ViewData["Title"] = "Imtihon tafsilotlari";
}

<div class="max-w-7xl mx-auto space-y-4">
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
        <div class="px-5 py-4 border-b border-gray-200 bg-blue-500 text-white rounded-t-lg">
            <h4 class="font-semibold flex items-center gap-2">
                <span>üìù</span> <span>@Model.Nomi</span>
            </h4>
        </div>
        <div class="px-5 py-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4 text-sm text-gray-700">
                <div class="space-y-1">
                    <div><span class="font-semibold">Guruh:</span> @Model.Guruh?.Nomi</div>
                    <div><span class="font-semibold">Kurs:</span> @Model.Guruh?.Kurs?.Nomi</div>
                    <div><span class="font-semibold">O'qituvchi:</span> @Model.Oqituvchi?.Familiya @Model.Oqituvchi?.Ism</div>
                </div>
                <div class="space-y-1">
                    <div>
                        <span class="font-semibold">Imtihon turi:</span>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ml-1">
                            @Model.ImtihonTuri
                        </span>
                    </div>
                    <div>
                        <span class="font-semibold">Format:</span>
                        @if (Model.ImtihonFormati == "Online")
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 ml-1">
                                üåê Online
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 ml-1">
                                üìÑ Offline
                            </span>
                        }
                    </div>
                    <div><span class="font-semibold">Sana:</span> @Model.Sana.ToString("dd.MM.yyyy")</div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Izoh))
            {
                <div class="mt-2 mb-4 rounded-lg bg-blue-50 border border-blue-100 px-4 py-3 text-sm text-blue-800">
                    <span class="font-semibold">Izoh:</span> @Model.Izoh
                </div>
            }

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div class="rounded-lg bg-gray-50 border border-gray-200 px-4 py-3 text-center">
                    <div class="text-lg font-semibold text-gray-900">
                        @(Model.Savollar?.Count ?? 0)
                    </div>
                    <div class="text-xs text-gray-500 uppercase tracking-wide">Savollar</div>
                </div>
                <div class="rounded-lg bg-gray-50 border border-gray-200 px-4 py-3 text-center">
                    <div class="text-lg font-semibold text-gray-900">
                        @(Model.Savollar?.Sum(s => s.BallQiymati) ?? 0)
                    </div>
                    <div class="text-xs text-gray-500 uppercase tracking-wide">Jami ball</div>
                </div>
                <div class="rounded-lg bg-gray-50 border border-gray-200 px-4 py-3 text-center">
                    <div class="text-lg font-semibold text-gray-900">
                        @(Model.Natijalar?.Count ?? 0)
                    </div>
                    <div class="text-xs text-gray-500 uppercase tracking-wide">Natijalar</div>
                </div>
            </div>

            <div class="flex flex-wrap gap-2 mb-4">
                <a asp-action="Natijalar" asp-route-id="@Model.Id"
                   class="inline-flex items-center px-4 py-2 rounded-lg bg-green-500 text-white text-sm font-medium hover:bg-green-600 transition-colors">
                    üìä Natijalar
                </a>
                <a asp-action="Tahrirlash" asp-route-id="@Model.Id"
                   class="inline-flex items-center px-4 py-2 rounded-lg bg-yellow-400 text-white text-sm font-medium hover:bg-yellow-500 transition-colors">
                    ‚úèÔ∏è Imtihon tahrirlash
                </a>
                <a asp-action="SavollarQoshish" asp-route-id="@Model.Id"
                   class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-500 text-white text-sm font-medium hover:bg-blue-600 transition-colors">
                    ‚ûï Savollar qo'shish
                </a>
                <a asp-action="ImtihonPdf" asp-route-id="@Model.Id"
                   class="inline-flex items-center px-4 py-2 rounded-lg border border-blue-500 text-blue-600 text-sm font-medium hover:bg-blue-50 transition-colors">
                    üìÑ Imtihonni yuklab olish (PDF)
                </a>
                <a asp-action="Index"
                   class="inline-flex items-center px-4 py-2 rounded-lg border border-gray-300 text-gray-700 text-sm font-medium hover:bg-gray-50 transition-colors">
                    ‚Üê Orqaga
                </a>
            </div>

            @if (Model.Savollar != null && Model.Savollar.Any())
            {
                <h5 class="mt-4 mb-2 text-sm font-semibold text-gray-800">Savollar</h5>
                <div class="border border-gray-200 rounded-lg overflow-x-auto bg-white">
                    <table class="min-w-full text-sm">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">#</th>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">Savol</th>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">A</th>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">B</th>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">C</th>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">D</th>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">To'g'ri javob</th>
                                <th class="px-3 py-2 text-left font-semibold text-gray-700">Ball</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            @foreach (var savol in Model.Savollar)
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-3 py-2 text-gray-700">@savol.Id</td>
                                    <td class="px-3 py-2 text-gray-800">@savol.SavolMatni</td>
                                    <td class="px-3 py-2 text-gray-700">@savol.VariantA</td>
                                    <td class="px-3 py-2 text-gray-700">@savol.VariantB</td>
                                    <td class="px-3 py-2 text-gray-700">@savol.VariantC</td>
                                    <td class="px-3 py-2 text-gray-700">@savol.VariantD</td>
                                    <td class="px-3 py-2 text-gray-900 font-semibold">@savol.TogriJavob</td>
                                    <td class="px-3 py-2 text-gray-700">@savol.BallQiymati</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>


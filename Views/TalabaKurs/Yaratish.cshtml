@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Talabani Kurs(lar)ga Biriktirish";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-1">Talabani kurs(lar)ga biriktirish</h2>
        <p class="text-muted small mb-0">Talabani bir yoki bir nechta kursga biriktiring</p>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Orqaga
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="Yaratish" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <label class="form-label fw-semibold">Talaba:</label>
                <select name="talabaId" class="form-select" required>
                    <option value="">-- Talabani tanlang --</option>
                    @foreach (var talaba in (SelectList)ViewBag.Talabalar)
                    {
                        <option value="@talaba.Value">@talaba.Text</option>
                    }
                </select>
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Kurslar (bir nechta tanlash mumkin):</label>
                <select name="kurslar" multiple class="form-select" size="6" required>
                    @foreach (var kurs in (MultiSelectList)ViewBag.Kurslar)
                    {
                        <option value="@kurs.Value">@kurs.Text</option>
                    }
                </select>
                <small class="text-muted d-block mt-1">
                    Bir nechta kurs tanlash uchun <strong>Ctrl</strong> (yoki Macâ€™da <strong>Cmd</strong>) tugmasini bosib turing.
                </small>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-check me-1"></i> Saqlash
                </button>

                <a asp-action="Index" class="btn btn-secondary px-4">
                    Bekor qilish
                </a>
            </div>

        </form>

    </div>
</div>

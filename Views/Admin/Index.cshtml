@model talim_platforma.Models.ViewModels.AdminDashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Dashboard</h2>
        <p class="text-muted small mb-0">Talim Plus markazining umumiy ko‚Äòrsatkichlari</p>
    </div>
    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2">
        Yangilangan: @DateTime.Now.ToString("dd MMM, HH:mm")
    </span>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Talabalar</div>
                <h3 class="mb-0">@Model.TotalStudents</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">O‚Äòqituvchilar</div>
                <h3 class="mb-0">@Model.TotalTeachers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Faol guruhlar</div>
                <h3 class="mb-0">@Model.ActiveGroups</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Kurslar</div>
                <h3 class="mb-0">@Model.TotalCourses</h3>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="text-muted small mb-1">Bugungi kirim</div>
                <h3>@Model.TodaysIncome.ToString("N0") so‚Äòm</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="text-muted small mb-1">Joriy oy kirimi</div>
                <h3>@Model.MonthlyIncome.ToString("N0") so‚Äòm</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="text-muted small mb-1">Yaqinlashayotgan imtihonlar</div>
                <h3>@Model.UpcomingExams</h3>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">üìù Kursga yozilganlar</h5>
                <a asp-action="KursApplications" class="btn btn-sm btn-primary">
                    <i class="fas fa-list me-1"></i> Barchasini ko'rish
                </a>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="me-3">
                        <h2 class="mb-0 text-primary">@Model.KursApplicationsCount</h2>
                        <small class="text-muted">Jami arizalar</small>
                    </div>
                    <div class="ms-auto">
                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                            <i class="fas fa-arrow-up me-1"></i> Yangi arizalar
                        </span>
                    </div>
                </div>
                @if (Model.RecentKursApplications.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var application in Model.RecentKursApplications)
                        {
                            <div class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">@application.Ism @application.Familiya</div>
                                    <small class="text-muted">@application.Telefon ‚Äî @application.Sana.ToString("dd.MM HH:mm")</small>
                                    @if (application.Kurs != null)
                                    {
                                        <div class="small text-primary">@application.Kurs.Nomi</div>
                                    }
                                </div>
                                <span class="badge bg-primary">Yangi</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Hozircha arizalar yo'q</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">So'nggi to'lovlar</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentPayments.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var payment in Model.RecentPayments)
                        {
                            <div class="list-group-item px-0 d-flex justify-content-between">
                                <div>
                                    <div class="fw-semibold">@payment.Talaba?.Familiya @payment.Talaba?.Ism</div>
                                    <small class="text-muted">@payment.Kurs?.Nomi ‚Äî @payment.Sana.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                                <span class="fw-semibold text-primary">@payment.Miqdor.ToString("N0") so'm</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Hozircha to'lovlar yo'q</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">So‚Äònggi to‚Äòlovlar</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentPayments.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var payment in Model.RecentPayments)
                        {
                            <div class="list-group-item px-0 d-flex justify-content-between">
                                <div>
                                    <div class="fw-semibold">@payment.Talaba?.Familiya @payment.Talaba?.Ism</div>
                                    <small class="text-muted">@payment.Kurs?.Nomi ‚Äî @payment.Sana.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                                <span class="fw-semibold text-primary">@payment.Miqdor.ToString("N0") so‚Äòm</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Hozircha to‚Äòlovlar yo‚Äòq</p>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-0">
                <h5 class="mb-0">Yaqinda yaratilgan guruhlar</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentGroups.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var group in Model.RecentGroups)
                        {
                            <li class="list-group-item px-0 d-flex justify-content-between">
                                <div>
                                    <div class="fw-semibold">@group.Nomi</div>
                                    <small class="text-muted">@group.Kurs?.Nomi</small>
                                </div>
                                <span class="text-muted">@group.YaratilganVaqt.ToString("dd.MM")</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">Yangi guruhlar yaratilmagan.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-3">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">üì¶ Arxivlangan foydalanuvchilar</h5>
                <a asp-action="Arxivlanganlar" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-archive me-1"></i> Barchasini ko'rish
                </a>
            </div>
            <div class="card-body">
                @{
                    var arxivlanganlar = ViewBag.Arxivlanganlar as List<talim_platforma.Models.Foydalanuvchi>;
                    if (arxivlanganlar != null && arxivlanganlar.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var arxivlangan in arxivlanganlar.Take(5))
                            {
                                <div class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-semibold">@arxivlangan.Familiya @arxivlangan.Ism</div>
                                        <small class="text-muted">
                                            @arxivlangan.Rol ‚Ä¢ 
                                            @(arxivlangan.ArxivlanganSana?.ToString("dd.MM.yyyy") ?? "Noma'lum")
                                        </small>
                                    </div>
                                    <span class="badge bg-secondary">Arxivlangan</span>
                                </div>
                            }
                        </div>
                        @if (arxivlanganlar.Count > 5)
                        {
                            <div class="text-center mt-2">
                                <small class="text-muted">va yana @(arxivlanganlar.Count - 5) ta...</small>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">Hozircha arxivlangan foydalanuvchilar yo'q.</p>
                    }
                }
            </div>
        </div>
    </div>
</div>


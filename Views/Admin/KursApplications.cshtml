@model IEnumerable<talim_platforma.Models.KursApplication>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kursga yozilganlar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Kursga yozilganlar</h2>
        <p class="text-muted small mb-0">Barcha kurs arizalari ro'yxati</p>
    </div>
    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2">
        Jami: @Model.Count()
    </span>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Ism Familiya</th>
                            <th>Telefon</th>
                            <th>Kurs</th>
                            <th>Sana</th>
                            <th>Holati</th>
                            <th>Amallar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var application in Model.Select((value, index) => new { value, index = index + 1 }))
                        {
                            <tr>
                                <td>@application.index</td>
                                <td>
                                    <div class="fw-semibold">@application.value.Ism @application.value.Familiya</div>
                                </td>
                                <td>
                                    <span class="text-muted">@application.value.Telefon</span>
                                </td>
                                <td>
                                    @if (application.value.Kurs != null)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary">@application.value.Kurs.Nomi</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Kurs tanlanmagan</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@application.value.Sana.ToString("dd.MM.yyyy HH:mm")</small>
                                </td>
                                <td>
                                    @if (application.value.Faol)
                                    {
                                        <span class="badge bg-success">Faol</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Nofaol</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-primary" onclick="showDetails(@application.value.Id)">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-success" onclick="markProcessed(@application.value.Id)">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="text-muted mb-3">
                    <i class="fas fa-inbox fa-3x"></i>
                </div>
                <h5 class="text-muted">Hozircha arizalar yo'q</h5>
                <p class="text-muted small">Kursga yozilgan birinchi ariza kutilmoqda</p>
            </div>
        }
    </div>
</div>

<!-- Modal for details -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ariza tafsilotlari</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Yopish</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDetails(id) {
            // Modalni ochish va ma'lumotlarni yuklash
            $('#detailsModal').modal('show');
            $('#modalBody').html('<div class="text-center"><div class="spinner-border"></div></div>');
            
            // Bu yerda AJAX orqali ma'lumotlarni yuklash mumkin
            // Hozircha statik ma'lumotlar
            setTimeout(() => {
                $('#modalBody').html(`
                    <div class="mb-3">
                        <label class="form-label">Ism Familiya:</label>
                        <p class="fw-semibold">Ma'lumot yuklanmoqda...</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Telefon:</label>
                        <p>+998 XX XXX XX XX</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ariza sanasi:</label>
                        <p>${new Date().toLocaleDateString('uz-UZ')}</p>
                    </div>
                `);
            }, 500);
        }
        
        function markProcessed(id) {
            if (confirm('Arizani qayta ishlangan deb belgilashni xohlaysizmi?')) {
                // Bu yerda AJAX orqali serverga yuborish mumkin
                alert('Ariza muvaffaqiyatli qayta ishlangan deb belgilandi!');
            }
        }
    </script>
}

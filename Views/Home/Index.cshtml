<!-- KURSGA YOZILISH MODAL OYNASI -->
<div id="kursModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl max-w-md w-full p-8 relative">
        <button onclick="closeModal()" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 text-2xl">
            ×
        </button>
        
        <h3 class="text-2xl font-bold mb-6 text-center text-blue-600">Kursga yozilish</h3>
        
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                @TempData["Success"]
            </div>
        }
        
        <form asp-action="KursgaYozilish" method="post">
            @Html.AntiForgeryToken()
            
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Ism">
                    Ism *
                </label>
                <input class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" 
                       id="Ism" name="Ism" type="text" required placeholder="Ismingizni kiriting">
            </div>
            
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Familiya">
                    Familiya *
                </label>
                <input class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" 
                       id="Familiya" name="Familiya" type="text" required placeholder="Familiyangizni kiriting">
            </div>
            
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Telefon">
                    Telefon raqam *
                </label>
                <input class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" 
                       id="Telefon" name="Telefon" type="tel" required placeholder="+998 XX XXX XX XX">
            </div>
            
            <div class="flex gap-3">
                <button type="submit" class="flex-1 bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors">
                    Kurslarga yozilish
                </button>
                <button type="button" onclick="closeModal()" class="flex-1 bg-gray-300 text-gray-700 py-3 rounded-lg font-bold hover:bg-gray-400 transition-colors">
                    Bekor qilish
                </button>
            </div>
        </form>
    </div>
</div>

<!-- TIZIMGA KIRISH MODAL OYNASI -->
<div id="loginModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl w-[380px] p-8 relative shadow-2xl overflow-hidden">
        <!-- Purple gradient top -->
        <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-purple-500 to-purple-400 rounded-t-3xl"></div>
        
        <button onclick="closeLoginModal()" class="absolute top-4 right-4 text-white hover:text-gray-200 text-2xl z-10">
            ×
        </button>
        
        <!-- Login title -->
        <div class="relative z-10 text-center mb-8 mt-8">
            <h2 class="text-3xl font-bold text-white">Login</h2>
        </div>

        <form id="loginForm" class="relative z-10">
            @Html.AntiForgeryToken()
            
            <!-- Login field -->
            <div class="mb-6">
                <input type="text" name="login" id="login" 
                       class="w-full border-b-2 border-gray-300 py-3 px-2 text-gray-700 focus:outline-none focus:border-purple-500 transition-colors bg-transparent" 
                       placeholder="Login" required />
            </div>
            
            <!-- Password field -->

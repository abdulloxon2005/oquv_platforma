@model talim_platforma.Models.TalabaKurs

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Talabani Kursga Tahrirlash";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Orqaga
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Tahrirlash" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Talaba:</label>
                <select asp-for="TalabaId" asp-items="ViewBag.Talabalar" class="form-select" required>
                    <option value="">-- Talabani tanlang --</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Kurs:</label>
                <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-select" required>
                </select>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-check me-1"></i> Saqlash
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">Bekor qilish</a>
            </div>
        </form>
    </div>
</div>

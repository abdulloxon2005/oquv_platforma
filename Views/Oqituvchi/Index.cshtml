@using talim_platforma.Models
@model talim_platforma.Models.ViewModels.TeacherDashboardViewModel
@{
    ViewData["Title"] = "O'qituvchi paneli";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    var oqituvchi = ViewBag.Oqituvchi as Foydalanuvchi;
}

<div class="max-w-7xl mx-auto space-y-6">
    <div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <p class="text-sm text-gray-500">Assalomu alaykum</p>
            <h1 class="text-2xl font-bold text-gray-800">
                @(oqituvchi != null ? $"{oqituvchi.Ism} {oqituvchi.Familiya}" : "O'qituvchi")
            </h1>
            <p class="mt-2 text-gray-500">Bugungi sana: @DateTime.Now.ToString("dd MMMM, yyyy")</p>
        </div>
        <div class="flex flex-wrap gap-3">
            <a asp-action="Groups" class="px-5 py-2.5 rounded-xl bg-blue-600 text-white text-sm font-semibold hover:bg-blue-700 transition-colors">
                Guruhlarim
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
        <div class="bg-white border border-blue-100 rounded-2xl p-5 shadow-sm">
            <p class="text-sm text-gray-500">Faol guruhlar</p>
            <p class="mt-2 text-3xl font-bold text-blue-600">@Model.GuruhlarSoni</p>
        </div>
        <div class="bg-white border border-green-100 rounded-2xl p-5 shadow-sm">
            <p class="text-sm text-gray-500">Talabalar soni</p>
            <p class="mt-2 text-3xl font-bold text-green-600">@Model.TalabalarSoni</p>
        </div>
        <div class="bg-white border border-amber-100 rounded-2xl p-5 shadow-sm">
            <p class="text-sm text-gray-500">Bugungi darslar</p>
            <p class="mt-2 text-3xl font-bold text-amber-500">@Model.BugungiDarslar</p>
        </div>
        <div class="bg-white border border-teal-100 rounded-2xl p-5 shadow-sm">
            <p class="text-sm text-gray-500">Davomat olingan guruhlar</p>
            <p class="mt-2 text-3xl font-bold text-teal-500">@Model.BugungiDavomatOlindi</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 space-y-4 lg:col-span-2">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-800">Guruhlar jadvali</h2>
                <span class="text-sm text-gray-500">@Model.Guruhlar.Count ta guruh</span>
            </div>

            @if (Model.Guruhlar.Any())
            {
                <div class="grid sm:grid-cols-2 xl:grid-cols-3 gap-4">
                    @foreach (var card in Model.Guruhlar)
                    {
                        <a asp-action="Groups" asp-route-id="@card.Id"
                           class="block border rounded-xl p-4 hover:border-blue-400 transition-all @("bg-white")">
                            <div class="flex items-start justify-between gap-3">
                                <div>
                                    <p class="text-sm text-gray-500">@card.KursNomi</p>
                                    <p class="text-lg font-semibold text-gray-800">@card.Nomi</p>
                                </div>
                                <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-700">
                                    @card.TalabalarSoni ta
                                </span>
                            </div>
                            <div class="mt-3 text-sm text-gray-500 space-y-1">
                                <p>ðŸ•’ @card.DarsVaqti</p>
                                <p>ðŸ“… @card.DarsKunlari</p>
                                <p>âš¡ @(string.IsNullOrWhiteSpace(card.Holati) ? "Faol" : card.Holati)</p>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="text-center text-gray-500 py-8 border border-dashed rounded-xl">
                    Sizga hali guruh biriktirilmagan.
                </div>
            }
        </div>

        <div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 space-y-4">
            <h2 class="text-lg font-semibold text-gray-800">Soâ€˜nggi davomatlar</h2>

            @if (Model.OxirgiDavomatlar.Any())
            {
                <ul class="space-y-4">
                    @foreach (var item in Model.OxirgiDavomatlar)
                    {
                        var rang = item.Holati switch
                        {
                            "Keldi" => "text-green-600",
                            "Kech keldi" => "text-amber-500",
                            "Kelmadi" => "text-red-500",
                            _ => "text-gray-600"
                        };
                        <li class="border border-gray-100 rounded-xl p-4">
                            <div class="flex items-center justify-between text-sm text-gray-500">
                                <span>@item.GuruhNomi</span>
                                <span>@item.Sana.ToString("dd.MM")</span>
                            </div>
                            <p class="mt-2 font-semibold text-gray-800">@item.TalabaFIO</p>
                            <p class="mt-1 text-sm font-medium @rang">@item.Holati</p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="text-center text-gray-500 py-8 border border-dashed rounded-xl">
                    Hozircha davomat ma'lumotlari yoâ€˜q.
                </div>
            }
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Tizimga kirish";
}

<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Talim Plus</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <!-- Modal Background -->
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md mx-4 p-8 relative">
            <h2 class="text-3xl font-bold text-center text-blue-600 mb-8">üîê Tizimga kirish</h2>

            <form asp-action="Login" method="post" id="loginForm">
                <div class="mb-6">
                    <label class="block text-gray-700 mb-3 text-lg font-semibold">Login</label>
                    <input type="text" name="login" id="login" 
                           class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition-all" 
                           placeholder="Loginingizni kiriting" required />
                </div>
                <div class="mb-8">
                    <label class="block text-gray-700 mb-3 text-lg font-semibold">Parol</label>
                    <input type="password" name="parol" id="parol" 
                           class="w-full border-2 border-gray-300 rounded-xl px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition-all" 
                           placeholder="Parolingizni kiriting" required />
                </div>
                <div class="flex gap-4">
                    <button type="button" onclick="closeLoginModal()" 
                            class="flex-1 bg-gray-500 text-white font-bold py-4 rounded-xl text-lg hover:bg-gray-600 transition-all transform hover:scale-105 shadow-lg">
                        Bekor qilish
                    </button>
                    <button type="submit" 
                            class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-bold py-4 rounded-xl text-lg hover:from-blue-700 hover:to-blue-800 transition-all transform hover:scale-105 shadow-lg">
                        Kirish
                    </button>
                </div>
            </form>

            <!-- Error Modal -->
            <div id="errorModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                <div class="bg-white rounded-2xl p-8 max-w-sm mx-4">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 0 8 8 0 016 0zm1 1H9a1 1 0 00-1 1v4a1 1 0 002 2h1a1 1 0 002-2V9a1 1 0 00-1-1H9a1 1 0 00-1 1v4a1 1 0 002 2h1a1 1 0 002-2V9a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-red-600 mb-2">Xatolik yuz berdi!</h3>
                        <p id="errorMessage" class="text-gray-600 mb-6">Login yoki parol noto'g'ri kiritilgan.</p>
                        <button onclick="closeErrorModal()" 
                                class="w-full bg-red-600 text-white font-semibold py-3 rounded-xl hover:bg-red-700 transition-all">
                            Qayta urinib ko'rish
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const login = document.getElementById('login').value;
            const parol = document.getElementById('parol').value;
            
            // Simple validation
            if (!login || !parol) {
                showErrorModal();
                return;
            }
            
            // Backend ga yuborish va javobni kutish
            fetch(this.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: new URLSearchParams(new FormData(this))
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Clear form fields
                    document.getElementById('login').value = '';
                    document.getElementById('parol').value = '';
                    // Avtomatik yo'naltirish
                    window.location.href = data.redirect || '/Admin/Index';
                } else {
                    // Backend dan kelgan xatolikni ko'rsatish
                    showErrorModalWithMessage(data.message || "Login yoki parol noto'g'ri kiritilgan.");
                }
            })
            .catch(error => {
                // Network xatolik
                showErrorModal();
            });
        });
        
        function showErrorModal() {
            document.getElementById('errorModal').classList.remove('hidden');
        }
        
        function showErrorModalWithMessage(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorModal').classList.remove('hidden');
        }
        
        function closeErrorModal() {
            document.getElementById('errorModal').classList.add('hidden');
        }
        
        function closeLoginModal() {
            // Modal oynasini yopish
            document.querySelector('.fixed.inset-0').classList.add('hidden');
        }
        
        // Close modals when clicking outside
        document.getElementById('errorModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeErrorModal();
            }
        });
    </script>
</body>
</html>

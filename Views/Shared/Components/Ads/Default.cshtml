@model IEnumerable<talim_platforma.Models.Advertisement>

@if (Model != null && Model.Any())
{
    <div class="grid gap-4 md:grid-cols-2">
        @foreach (var ad in Model)
        {
            <a href="@(string.IsNullOrWhiteSpace(ad.LinkUrl) ? "#" : ad.LinkUrl)" target="_blank"
               class="block bg-white border border-gray-200 rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition">
                @if (!string.IsNullOrWhiteSpace(ad.ImagePath))
                {
                    <div class="aspect-video bg-gray-100 overflow-hidden">
                        <img src="@ad.ImagePath" alt="@ad.Title" class="w-full h-full object-cover" />
                    </div>
                }
                <div class="p-4 space-y-1">
                    <p class="text-sm text-gray-500">Reklama</p>
                    <h3 class="text-lg font-semibold text-gray-800">@ad.Title</h3>
                    @if (!string.IsNullOrWhiteSpace(ad.Description))
                    {
                        <p class="text-sm text-gray-600">@ad.Description</p>
                    }
                </div>
            </a>
        }
    </div>
}


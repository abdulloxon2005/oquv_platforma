@model talim_platforma.ViewModels.FoydalanuvchiTahrirlashViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Foydalanuvchini tahrirlash";
}

<div class="mb-3">
    <h2 class="mb-1">Foydalanuvchini tahrirlash</h2>
    <p class="text-muted small mb-0">Foydalanuvchi ma'lumotlari va roli</p>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger py-2 px-3 small">
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="FoydalanuvchiTahrirlash" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Ism" class="form-label"></label>
            <input asp-for="Ism" class="form-control" />
            <span asp-validation-for="Ism" class="text-danger small"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Familiya" class="form-label"></label>
            <input asp-for="Familiya" class="form-control" />
            <span asp-validation-for="Familiya" class="text-danger small"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="OtasiningIsmi" class="form-label"></label>
            <input asp-for="OtasiningIsmi" class="form-control" />
            <span asp-validation-for="OtasiningIsmi" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="TelefonRaqam" class="form-label"></label>
            <input asp-for="TelefonRaqam" class="form-control" />
            <span asp-validation-for="TelefonRaqam" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Login" class="form-label"></label>
            <input asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Parol" class="form-label">Yangi parol (ixtiyoriy)</label>
            <input asp-for="Parol" type="password" class="form-control" />
            <span asp-validation-for="Parol" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Rol" class="form-label"></label>
            <select asp-for="Rol" class="form-select">
                <option value="admin">Admin</option>
                <option value="teacher">Teacher</option>
                <option value="student">Student</option>
                <option value="user">User</option>
            </select>
            <span asp-validation-for="Rol" class="text-danger small"></span>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-1"></i> Saqlash
        </button>
        <a asp-action="Foydalanuvchilar" class="btn btn-outline-secondary">
            Orqaga
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --admin-bg: #f3f6ff;
            --admin-sidebar-bg: #0f172a;
            --admin-sidebar-active: #2563eb;
            --admin-primary: #2563eb;
            --admin-primary-soft: #e0edff;
        }

        body {
            background: radial-gradient(circle at top left, #e0f2fe, #eff6ff 40%, #ffffff 80%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .admin-shell {
            min-height: 100vh;
        }

        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #0f172a, #111827);
            color: #e5e7eb;
            box-shadow: 4px 0 20px rgba(15, 23, 42, 0.35);
        }

        .sidebar-logo {
            font-weight: 700;
            letter-spacing: 0.08em;
            font-size: 0.85rem;
        }

        .sidebar a {
            color: #e5e7eb;
            padding: 10px 14px;
            border-radius: 8px;
            margin-bottom: 4px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 0.9rem;
            text-decoration: none;
            transition: background-color 0.18s ease, color 0.18s ease, transform 0.1s ease;
        }

        .sidebar a i {
            width: 18px;
            text-align: center;
        }

        .sidebar a:hover {
            background-color: rgba(37, 99, 235, 0.18);
            color: #ffffff;
            transform: translateX(2px);
        }

        .sidebar a.active-link {
            background: linear-gradient(90deg, #2563eb, #1d4ed8);
            color: #ffffff;
            box-shadow: 0 10px 25px rgba(37, 99, 235, 0.55);
        }

        .admin-main {
            background: transparent;
        }

        .admin-topbar {
            border-bottom: 1px solid #e5e7eb;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
        }

        .admin-content {
            padding: 24px;
        }

        .admin-card {
            background: #ffffff;
            border-radius: 18px;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.12);
            border: 1px solid rgba(148, 163, 184, 0.25);
            padding: 22px 22px 20px;
        }

        .admin-page-title {
            font-size: 1.35rem;
            font-weight: 600;
            color: #0f172a;
        }

        .btn-primary {
            background-color: var(--admin-primary);
            border-color: var(--admin-primary);
        }

        .btn-primary:hover {
            background-color: #1d4ed8;
            border-color: #1d4ed8;
        }

        .badge-role {
            font-size: 0.75rem;
            padding: 0.25rem 0.55rem;
            border-radius: 999px;
        }

        .badge-role-admin {
            background-color: rgba(248, 113, 113, 0.15);
            color: #b91c1c;
        }

        .badge-role-teacher {
            background-color: rgba(56, 189, 248, 0.18);
            color: #0369a1;
        }

        .badge-role-student {
            background-color: rgba(52, 211, 153, 0.18);
            color: #047857;
        }

        .badge-role-user {
            background-color: rgba(148, 163, 184, 0.22);
            color: #4b5563;
        }
    </style>
</head>
<body>
    <div class="container-fluid admin-shell">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 col-lg-2 sidebar d-flex flex-column py-3 px-3">
                <div class="d-flex align-items-center mb-4 px-1">
                    <div class="rounded-circle bg-white bg-opacity-10 d-flex align-items-center justify-content-center me-2" style="width:34px;height:34px;">
                        <i class="fas fa-graduation-cap text-primary"></i>
                    </div>
                    <div>
                        <div class="sidebar-logo text-uppercase text-xs text-secondary">TALIM PLUS</div>
                        <div class="text-sm fw-semibold">Admin panel</div>
                    </div>
                </div>

                <nav class="flex-grow-1">
                    <a href="/Admin/Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active-link" : "")">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/Admin/Foydalanuvchilar" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Foydalanuvchilar" ? "active-link" : "")">
                        <i class="fas fa-users"></i>
                        <span>Foydalanuvchilar</span>
                    </a>
                    <a href="/Guruh/Guruhlar" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Guruh" ? "active-link" : "")">
                        <i class="fas fa-layer-group"></i>
                        <span>Guruhlar</span>
                    </a>
                    <a href="/Admin/Kurslar" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Kurslar" ? "active-link" : "")">
                        <i class="fas fa-book"></i>
                        <span>Kurslar</span>
                    </a>
                    <a href="/TalabaKurs/Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "TalabaKurs" ? "active-link" : "")">
                        <i class="fas fa-book"></i>
                        <span>Kursga biriktrish</span>
                    </a>
                    <a href="/Tolov/Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Tolov" ? "active-link" : "")">
                        <i class="fas fa-credit-card"></i>
                        <span>To'lovlar</span>
                    </a>
                    <a href="/Reklama/Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Reklama" ? "active-link" : "")">
                        <i class="fas fa-bullhorn"></i>
                        <span>Reklamalar</span>
                    </a>
                    <a href="/Admin/ImtihonNatijalari" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "ImtihonNatijalari" ? "active-link" : "")">
                        <i class="fas fa-clipboard-list"></i>
                        <span>Imtihon natijalari</span>
                    </a>
                    <a href="/Hisobot/Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Hisobot" ? "active-link" : "")">
                        <i class="fas fa-chart-line"></i>
                        <span>Hisobotlar</span>
                    </a>
                    <a href="/Admin/BotUlash" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "BotUlash" ? "active-link" : "")">
                        <i class="fas fa-robot"></i>
                        <span>Bot ulash</span>
                    </a>
                </nav>

                <div class="mt-auto pt-3 border-top border-gray-700 border-opacity-25">
                    <a href="/Auth/Logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Chiqish</span>
                    </a>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-10 col-lg-10 admin-main px-0">
                <header class="admin-topbar d-flex justify-content-between align-items-center px-4 py-3">
                    <div>
                        <span class="text-muted small">Admin panel</span>
                        <div class="fw-semibold">@ViewData["Title"]</div>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2">
                            <i class="fas fa-shield-alt me-1"></i> Talim Plus
                        </span>
                    </div>
                </header>

                <main class="admin-content">
                    <div class="admin-card">
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

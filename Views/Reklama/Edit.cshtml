@model talim_platforma.Models.Advertisement
@{
    ViewData["Title"] = "Reklama tahrirlash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <p class="text-uppercase text-muted small mb-1">Kontent</p>
            <h2 class="mb-0 fw-semibold">Reklama tahrirlash</h2>
            <span class="text-muted small">Banner rasm + link; targetni tanlang</span>
        </div>
        <a asp-action="Index" class="btn btn-light">← Ro‘yxatga qaytish</a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm border-0 admin-card">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Target</label>
            <select asp-for="Target" class="form-select">
                <option value="all">Barcha</option>
                <option value="home">Asosiy sahifa</option>
                <option value="teacher">O‘qituvchi</option>
                <option value="student">O‘quvchi</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="LinkUrl" class="form-label"></label>
            <input asp-for="LinkUrl" class="form-control" placeholder="https://..." />
            <span asp-validation-for="LinkUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Rasm (jpg/png/webp, 5MB gacha)</label>
            @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
            {
                <div class="mb-2">
                    <img src="@Model.ImagePath" class="img-fluid rounded border" style="max-height:180px" />
                </div>
            }
            <input type="file" name="image" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
            <div class="form-text">O‘lcham: 16:9 tavsiya etiladi. Yuklamasangiz, eski rasm qoladi.</div>
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Saqlash</button>
            <a asp-action="Index" class="btn btn-secondary">Bekor qilish</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


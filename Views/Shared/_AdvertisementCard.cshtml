@model IEnumerable<talim_platforma.Models.Advertisement>

@if (Model != null && Model.Any())
{
    <div class="w-full max-w-4xl mx-auto mb-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var ad in Model)
            {
                <a href="@(string.IsNullOrWhiteSpace(ad.LinkUrl) ? "#" : ad.LinkUrl)" 
                   target="_blank"
                   class="group bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
                    
                    @if (!string.IsNullOrWhiteSpace(ad.ImagePath))
                    {
                        <div class="relative h-32 sm:h-40 bg-gradient-to-br from-gray-50 to-gray-100 overflow-hidden">
                            <img src="@ad.ImagePath" 
                                 alt="@ad.Title" 
                                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                            <div class="absolute top-2 right-2 bg-red-500 text-white text-xs px-2 py-1 rounded-full font-medium">
                                E'lonlar
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="h-32 sm:h-40 bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center">
                            <div class="text-center">
                                <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center mx-auto mb-2">
                                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <p class="text-xs text-gray-500">E'lonlar</p>
                            </div>
                        </div>
                    }
                    
                    <div class="p-4">
                        <h3 class="text-base font-semibold text-gray-800 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
                            @ad.Title
                        </h3>
                        @if (!string.IsNullOrWhiteSpace(ad.Description))
                        {
                            <p class="text-sm text-gray-600 line-clamp-3">
                                @ad.Description
                            </p>
                        }
                    </div>
                </a>
            }
        </div>
    </div>
}

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>

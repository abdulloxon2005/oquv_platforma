@model IEnumerable<talim_platforma.Models.Course>
@{
    ViewData["Title"] = "Kurslar boshqaruvi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Kurslar boshqaruvi</h1>
        <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2">
            <i class="fas fa-plus"></i>
            Yangi kurs qo'shish
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="bg-white border border-gray-200 rounded-xl p-8 text-center">
            <div class="mb-4">
                <i class="fas fa-graduation-cap text-6xl text-blue-500 mb-4"></i>
            </div>
            <p class="text-gray-500 mb-4">Hozircha kurslar yo'q.</p>
            <a asp-action="Create" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors inline-flex items-center gap-2">
                <i class="fas fa-plus"></i>
                Birinchi kursni qo'shish
            </a>
        </div>
    }
    else
    {
        <div class="bg-white border border-gray-200 rounded-xl overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rasm</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kurs nomi</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tavsif</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Holati</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Yaratilgan</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amallar</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (!string.IsNullOrWhiteSpace(course.ImagePath))
                                {
                                    <img src="@course.ImagePath" alt="@course.Title" class="w-16 h-16 object-cover rounded-lg" />
                                }
                                else
                                {
                                    <div class="w-16 h-16 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-image text-gray-400 text-xl"></i>
                                    </div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@course.Title</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-500 max-w-xs truncate">
                                    @(course.Description ?? "Tavsif yo'q")
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (course.IsActive)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        <i class="fas fa-check-circle mr-1"></i>
                                        Faol
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                        <i class="fas fa-times-circle mr-1"></i>
                                        Faol emas
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @course.CreatedAt.ToString("dd.MM.yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex justify-end space-x-2">
                                    <a asp-action="Edit" asp-route-id="@course.Id" 
                                       class="text-blue-600 hover:text-blue-900 inline-flex items-center gap-1">
                                        <i class="fas fa-edit"></i>
                                        Tahrirlash
                                    </a>
                                    <form asp-action="Toggle" asp-route-id="@course.Id" method="post" class="inline">
                                        <button type="submit" class="text-yellow-600 hover:text-yellow-900 inline-flex items-center gap-1">
                                            <i class="fas fa-power-off"></i>
                                            @(course.IsActive ? "O'chirish" : "Yoqish")
                                        </button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@course.Id" method="post" 
                                          onsubmit="return confirm('Ushbu kursni o\'chirishga ishonchingiz komilmi?')" class="inline">
                                        <button type="submit" class="text-red-600 hover:text-red-900 inline-flex items-center gap-1">
                                            <i class="fas fa-trash"></i>
                                            O'chirish
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

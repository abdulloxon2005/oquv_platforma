@model talim_platforma.Models.Course
@{
    ViewData["Title"] = "Kursni tahrirlash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="flex items-center mb-6">
        <a asp-action="Index" class="text-blue-600 hover:text-blue-700 mr-3 flex items-center gap-2">
            <i class="fas fa-arrow-left"></i>
            Ortga
        </a>
        <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-3">
            <i class="fas fa-edit text-blue-600"></i>
            Kursni tahrirlash
        </h1>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            
            <div class="space-y-6">
                <div>
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-2 flex items-center gap-2">
                        <i class="fas fa-heading text-blue-500"></i>
                        Kurs nomi *
                    </label>
                    <input asp-for="Title" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Title" class="text-red-600 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2 flex items-center gap-2">
                        <i class="fas fa-align-left text-blue-500"></i>
                        Tavsif
                    </label>
                    <textarea asp-for="Description" 
                              rows="4"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-600 text-sm mt-1"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2 flex items-center gap-2">
                        <i class="fas fa-image text-blue-500"></i>
                        Kurs rasmi
                    </label>
                    <div class="space-y-3">
                        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
                        {
                            <div class="flex items-center space-x-4 p-3 bg-gray-50 rounded-lg">
                                <img src="@Model.ImagePath" alt="@Model.Title" class="w-20 h-20 object-cover rounded-lg border-2 border-gray-200" />
                                <div>
                                    <p class="text-sm text-gray-600 font-medium">Joriy rasm</p>
                                    <p class="text-xs text-gray-500">Yangi rasm yuklasangiz, bu rasm almashtiriladi</p>
                                </div>
                            </div>
                        }
                        <input type="file" 
                               name="image" 
                               accept=".jpg,.jpeg,.png,.webp"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <p class="text-xs text-gray-500">
                            <i class="fas fa-info-circle"></i>
                            JPG, JPEG, PNG, WEBP formatlar, maksimal 5MB
                        </p>
                    </div>
                </div>

                <div class="flex items-center">
                    <input asp-for="IsActive" 
                           type="checkbox" 
                           class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label asp-for="IsActive" class="ml-2 text-sm text-gray-700 flex items-center gap-2">
                        <i class="fas fa-toggle-on text-green-500"></i>
                        Kurs faol
                    </label>
                </div>

                <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                    <a asp-action="Index" 
                       class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors flex items-center gap-2">
                        <i class="fas fa-times"></i>
                        Bekor qilish
                    </a>
                    <button type="submit" 
                            class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2">
                        <i class="fas fa-save"></i>
                        Saqlash
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

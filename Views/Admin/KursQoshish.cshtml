@model talim_platforma.Models.Kurs

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Yangi kurs";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-plus-circle text-primary me-2"></i>Yangi kurs
        </h2>
        <p class="text-muted small mb-0">Yangi kurs ma'lumotlarini kiriting</p>
    </div>
    <a asp-action="Kurslar" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Orqaga
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form asp-action="KursQoshish" method="post" id="courseForm">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-book text-primary me-1"></i>Kurs nomi
                            </label>
                            <input asp-for="Nomi" class="form-control form-control-lg" placeholder="Kurs nomini kiriting..." />
                            <span asp-validation-for="Nomi" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-layer-group text-primary me-1"></i>Darajasi
                            </label>
                            <select asp-for="Darajasi" class="form-control form-control-lg">
                                <option value="">Darajani tanlang...</option>
                                <option value="Boshlang'ich">Boshlang'ich</option>
                                <option value="O'rta">O'rta</option>
                                <option value="Yuqori">Yuqori</option>
                                <option value="Professional">Professional</option>
                            </select>
                            <span asp-validation-for="Darajasi" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-align-left text-primary me-1"></i>Tavsif
                        </label>
                        <textarea asp-for="Tavsif" class="form-control" rows="4" placeholder="Kurs haqida to'liq ma'lumot..."></textarea>
                        <span asp-validation-for="Tavsif" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-dollar-sign text-primary me-1"></i>Narxi (so'm)
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">so'm</span>
                                <input asp-for="Narxi" type="number" class="form-control" placeholder="0" />
                            </div>
                            <span asp-validation-for="Narxi" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-clock text-primary me-1">Davomiyligi (soat)
                            </label>
                            <input asp-for="Davomiyligi" type="number" class="form-control form-control-lg" placeholder="0" />
                            <span asp-validation-for="Davomiyligi" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-tag text-primary me-1"></i>Kategoriya
                            </label>
                            <select asp-for="Kategoriya" class="form-control form-control-lg">
                                <option value="">Kategoriyani tanlang...</option>
                                <option value="IT">IT va Dasturlash</option>
                                <option value="Til">Tillar</option>
                                <option value="Dizayn">Dizayn</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Boshqa">Boshqa</option>
                            </select>
                            <span asp-validation-for="Kategoriya" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-image text-primary me-1"></i>Rasm yuklash
                            </label>
                            <input type="file" class="form-control form-control-lg" accept="image/*" />
                            <small class="text-muted">JPG, PNG, GIF formatlar (maks: 2MB)</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="Faol" class="form-check-input" />
                            <label asp-for="Faol" class="form-check-label fw-semibold">
                                <i class="fas fa-toggle-on text-success me-1"></i>Faol kurs
                            </label>
                        </div>
                        <small class="text-muted">Faol kurslar asosiy sahifada ko'rsatiladi</small>
                    </div>

                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <div class="text-muted small">
                            <i class="fas fa-info-circle me-1"></i>
                            Barcha maydonlar to'ldirilishi shart
                        </div>
                        <div>
                            <button type="button" class="btn btn-outline-secondary me-2" onclick="resetForm()">
                                <i class="fas fa-redo me-1"></i>Tozalash
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-1"></i>Saqlash
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-lightbulb text-warning me-2"></i>Ko'rsatmalar
                </h5>
                <ul class="list-unstyled small">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Kurs nomi aniq va tushunarli bo'lishi kerak
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Tavsifda kurs mazmuni to'liq bayon etilishi kerak
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Narx va davomiylik haqiqatga mos bo'lishi kerak
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-check text-success me-2"></i>
                        Rasm kursning vizual ifodasi bo'ladi
                    </li>
                </ul>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-chart-line text-info me-2"></i>Statistika
                </h5>
                <div class="row text-center">
                    <div class="col-6">
                        <div class="h3 mb-0 text-primary">@(ViewBag.TotalCourses ?? 0)</div>
                        <small class="text-muted">Jami kurslar</small>
                    </div>
                    <div class="col-6">
                        <div class="h3 mb-0 text-success">@(ViewBag.ActiveCourses ?? 0)</div>
                        <small class="text-muted">Faol kurslar</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function resetForm() {
    document.getElementById('courseForm').reset();
}

// Form validation
document.getElementById('courseForm').addEventListener('submit', function(e) {
    const nomi = document.getElementById('Nomi').value.trim();
    const narxi = document.getElementById('Narxi').value;
    
    if (!nomi) {
        e.preventDefault();
        alert('Kurs nomini kiriting!');
        return false;
    }
    
    if (!narxi || narxi <= 0) {
        e.preventDefault();
        alert('Narxni to\'g\'ri kiriting!');
        return false;
    }
});
</script>

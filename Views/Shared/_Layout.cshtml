    <script>
        document.getElementById("menuBtn").onclick = () =>
            document.getElementById("mobileMenu").classList.toggle("hidden");
        
        // Set current year dynamically
        document.getElementById("currentYear").textContent = new Date().getFullYear();
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Login Modal (agar bu sahifa Index bo'lmasa) -->
    @if (ViewContext.ViewData["Title"]?.ToString() != "Talim Plus Education Center")
    {
        <div id="loginModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
            <div class="bg-white rounded-3xl w-[380px] p-8 relative shadow-2xl overflow-hidden">
                <!-- Purple gradient top -->
                <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-purple-500 to-purple-400 rounded-t-3xl"></div>
                
                <button onclick="closeLoginModal()" class="absolute top-4 right-4 text-white hover:text-gray-200 text-2xl z-10">
                    ×
                </button>
                
                <!-- Login title -->
                <div class="relative z-10 text-center mb-8 mt-8">
                    <h2 class="text-3xl font-bold text-white">Login</h2>
                </div>

                <form id="loginForm" class="relative z-10">
                    @Html.AntiForgeryToken()
                    
                    <!-- Login field -->
                    <div class="mb-6">
                        <input type="text" name="login" id="login" 
                               class="w-full border-b-2 border-gray-300 py-3 px-2 text-gray-700 focus:outline-none focus:border-purple-500 transition-colors bg-transparent" 
                               placeholder="Login" required />
                    </div>
                    
                    <!-- Password field -->
                    <div class="mb-8">
                        <input type="password" name="parol" id="parol" 
                               class="w-full border-b-2 border-gray-300 py-3 px-2 text-gray-700 focus:outline-none focus:border-purple-500 transition-colors bg-transparent" 
                               placeholder="Password" required autocomplete="current-password" />
                    </div>
                    
                    <!-- Login button -->
                    <button type="submit" 
                            class="w-full bg-gradient-to-r from-blue-500 to-purple-500 text-white font-bold py-3 rounded-full text-lg hover:from-blue-600 hover:to-purple-600 transition-all transform hover:scale-105 shadow-lg">
                        Login
                    </button>
                </form>
            </div>

                <!-- Error Modal -->
                <div id="errorModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                    <div class="bg-white rounded-2xl p-8 max-w-sm mx-4">
                        <div class="text-center">
                            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 0 8 8 0 016 0zm1 1H9a1 1 0 00-1 1v4a1 1 0 002 2h1a1 1 0 002-2V9a1 1 0 00-1-1H9a1 1 0 00-1 1v4a1 1 0 002 2h1a1 1 0 002-2V9a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-red-600 mb-2">Xatolik yuz berdi!</h3>
                            <p id="errorMessage" class="text-gray-600 mb-6">Login yoki parol noto'g'ri kiritilgan.</p>
                            <button onclick="closeErrorModal()" 
                                    class="w-full bg-red-600 text-white font-semibold py-3 rounded-xl hover:bg-red-700 transition-all">
                                Qayta urinib ko'rish
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    }

    <script>
        // Login modal functions
        function openLoginModal() {
            const modal = document.getElementById('loginModal');
            if (modal) {
                modal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeLoginModal() {
            const modal = document.getElementById('loginModal');
            if (modal) {
                modal.classList.add('hidden');
                document.body.style.overflow = 'auto';
                // Login formani tozalash
                const form = document.getElementById('loginForm');
                if (form) form.reset();
            }
        }

        function showErrorModal() {
            const modal = document.getElementById('errorModal');
            if (modal) modal.classList.remove('hidden');
        }

        function showErrorModalWithMessage(message) {
            const modal = document.getElementById('errorModal');
            const messageEl = document.getElementById('errorMessage');
            if (modal && messageEl) {
                messageEl.textContent = message;
                modal.classList.remove('hidden');
            }
        }

        function closeErrorModal() {
            const modal = document.getElementById('errorModal');
            if (modal) modal.classList.add('hidden');
        }

        // Login form submission
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            if (loginForm) {
                loginForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const login = document.getElementById('login').value;
                    const parol = document.getElementById('parol').value;
                    
                    if (!login || !parol) {
                        showErrorModal();
                        return;
                    }
                    
                    fetch('/Auth/Login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: new URLSearchParams(new FormData(this))
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById('login').value = '';
                            document.getElementById('parol').value = '';
                            window.location.href = data.redirect || '/Admin/Index';
                        } else {
                            showErrorModalWithMessage(data.message || "Login yoki parol noto'g'ri kiritilgan.");
                        }
                    })
                    .catch(error => {
                        this.submit();
                    });
                });
            }

            // Modal tashqarisiga bosilganda yopish
            const loginModal = document.getElementById('loginModal');
            const errorModal = document.getElementById('errorModal');
            
            if (loginModal) {
                loginModal.addEventListener('click', function(e) {
                    if (e.target === this) closeLoginModal();
                });
            }
            
            if (errorModal) {
                errorModal.addEventListener('click', function(e) {
                    if (e.target === this) closeErrorModal();
                });
            }

            // ESC tugmasi bilan yopish
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeLoginModal();
                    closeErrorModal();
                }
            });
        });
    </script>
</body>
</html>

@model List<talim_platforma.Models.Foydalanuvchi>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Foydalanuvchilar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-1">Foydalanuvchilar</h2>
        <p class="text-muted small mb-0">Platformadagi barcha foydalanuvchilar ro‘yxati</p>
    </div>
    <a asp-action="FoydalanuvchiQoshish" class="btn btn-primary">
        <i class="fas fa-user-plus me-1"></i> Yangi foydalanuvchi
    </a>
</div>

<form asp-action="Foydalanuvchilar" method="get" class="mb-3 row g-2">
    <div class="col-md-4">
        <input type="text" name="q" class="form-control" placeholder="Ism, familiya yoki login..." value="@ViewBag.QidirilganIsm" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-outline-primary w-100">
            <i class="fas fa-search me-1"></i> Qidirish
        </button>
    </div>
</form>

@if (TempData["xabar"] != null)
{
    <div class="alert alert-success py-2 px-3 small">@TempData["xabar"]</div>
}

<div class="table-responsive mt-3">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>F.I.Sh</th>
                <th>Telefon</th>
                <th>Login</th>
                <th>Rol</th>
                <th class="text-end">Amallar</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var index = 1;
                foreach (var item in Model)
                {
                    var fullName = $"{item.Familiya} {item.Ism}";
                    var roleLower = (item.Rol ?? "").Trim().ToLower();
                    var roleClass = roleLower switch
                    {
                        "admin" => "badge-role badge-role-admin",
                        "teacher" or "oqituvchi" => "badge-role badge-role-teacher",
                        "student" or "talaba" or "oquvchi" => "badge-role badge-role-student",
                        _ => "badge-role badge-role-user"
                    };
                    <tr>
                        <td>@index</td>
                        <td>
                            <div class="fw-semibold">@fullName</div>
                            <div class="text-muted small">@item.OtasiningIsmi</div>
                        </td>
                        <td class="text-nowrap">@item.TelefonRaqam</td>
                        <td>@item.Login</td>
                        <td>
                            <span class="@roleClass text-capitalize">
                                @item.Rol
                            </span>
                        </td>
                        <td class="text-end text-nowrap">
                            <a asp-action="FoydalanuvchiTahrirlash" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a asp-action="FoydalanuvchiOchirish" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger me-1"
                               onclick="return confirm('Haqiqatan ham o‘chirmoqchimisiz?');">
                                <i class="fas fa-trash"></i>
                            </a>
                            <a asp-controller="Admin" asp-action="BotUlash" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-robot"></i>
                            </a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        Hozircha foydalanuvchilar mavjud emas.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
